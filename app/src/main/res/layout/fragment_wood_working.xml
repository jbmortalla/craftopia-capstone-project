<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".creation.WoodWorkingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header">

            <ImageButton
                android:id="@+id/woodWorkingbackbutton"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="@color/transparent" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/sidebartitle"/>

            <ImageButton
                android:id="@+id/notification"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@color/transparent"
                android:src="@drawable/notif"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="5dp"
            android:background="@color/header"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/woodWorkingspinnerButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/woodWorking_search_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:inputType="textFilter"
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="14dp" />

            <Button
                android:id="@+id/woodWorking_search_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/search_border"
                android:fontFamily="sans-serif-light"
                android:text="Search"
                android:textSize="13sp"
                app:icon="@android:drawable/ic_menu_search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Featured Products"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/woodWorkingRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>